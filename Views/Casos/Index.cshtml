@model IEnumerable<ControleDeCasos.Models.Caso>

@{
    ViewBag.Title = "Listagem";
}

<h2>Listagem</h2>

<p>
    @Html.ActionLink("Criar Novo(a)", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Controle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IniciaisPaciente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EstadoAtual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataCriacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataUltimaAtualizacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Controle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IniciaisPaciente)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataCriacao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DataUltimaAtualizacao)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EstadoAtualTexto)
    </td>
    <td>
        @Html.ActionLink("Editar", "Edit", new { id = item.CasoId }) |
        @Html.ActionLink("Detalhes", "Details", new { id = item.CasoId }) |
        @Html.ActionLink("Apagar", "Delete", new { id = item.CasoId })
    </td>

</tr>
}

</table>
